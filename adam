programa {
 funcao inicio() {
   Algoritmo CalcularPesoIdeal
   Var
       altura, pesoIdeal: Real
       sexo: Caractere


   Inicio
       Escreva("Digite a altura da pessoa em metros: ")
       Leia(altura)
      
       Escreva("Digite o sexo da pessoa (M para masculino, F para feminino): ")
       Leia(sexo)
      
Se sexo = "M" Entao
           pesoIdeal <- (72.7 * altura) - 58
           Escreva("O peso ideal para um homem com ", altura, " metros de altura é: ", pesoIdeal, " kg")
       Senao Se sexo = "F" Entao
           pesoIdeal <- (62.1 * altura) - 44.7
           Escreva("O peso ideal para uma mulher com ", altura, " metros de altura é: ", pesoIdeal, " kg")
       Senao
           Escreva("Sexo inválido. Por favor, digite M para masculino ou F para feminino.")
       FimSe
   Fim
  
 }
}
